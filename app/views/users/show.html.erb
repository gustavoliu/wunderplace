<div class="container-profile text-center ">
  <div class="row" style="background-image: linear-gradient(-225deg, rgba(11,72,135,0.43) 0%, rgba(0,12,12,0.6) 86%),  url(<%= image_path 'sofa.jpg'%>);">
    <br>
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-4 col-sm-4"><%= cl_image_tag user_avatar(@user),
      width: 200, height: 200, crop: :fill, gravity: :face,
      class:"avatar-large" %>
    </div>
      <div class="col-xs-offset-1 col-xs-10 col-sm-offset-4 col-sm-4">
        <h1> <%= "#{@user.first_name} #{@user.last_name}" %> </h1>
      </div>
    </div>
  </div>

  <br>

  <div class="container container-profile">
    <h2  class="title-user-show text-center"> <%= "#{@user.first_name}'s rooms" %> </h2>
    <div class="row">
      <% rooms = @user.rooms.reject { |r| r.hidden == true } %>
      <% rooms.each do |room| %>
      <div class="col-xs-12 col-sm-3">
        <div class="dashboard-card">
          <div class="dashboard-card-body">
            <div class="dashboard-card-picture" style="background-image: url('<%= cl_image_path room_photo_or_stub(room)%>')">
            </div>
            <div class="dashboard-card-hover text-center">
              <h4><%= room.name %></h4>
              <p><%= room.description %></p>
              <%= link_to "", room_path(room), class: "dashboard-card-link" %>
            </div>
              <div class="dashboard-card-price">
              <ul class="list-inline">
                <li><i class="fa fa-money"></i> <%= room.price %>R$/hora</li>
                <li><i class="fa fa-eye"></i> Rented: <% if room.reservations.count > 1%><%= room.reservations.count %> times <% else %><%= room.reservation.count %> time<% end %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
