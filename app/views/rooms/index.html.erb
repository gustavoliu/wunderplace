<div class="card-container">
  <div class="banner_wrapper">
    <div class="banner_search_title">
    </div>
    <div class="row" id="card">
      <% @rooms.each do |room| %>
      <%= link_to room do %>
      <div class="col">
        <% if room.photos? %>
        <%= cl_image_tag room.photos.first.path, width: 300, height: 200,
        crop: :fill%>
        <% end %>
        <%= room.name %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>

