

<%= simple_form_for @room do |f| %>
<%= f.input :type, collection: ['Psicologia', 'Odontologia', 'Nutrição', 'Psiquiatria'], label: 'Qual o tipo da sala?', label_html: { align: "left" } %>
<%= f.input :address, label: 'Onde fica?', label_html: {align: 'left'} %>
<%= f.submit "Cadastrar", class: 'btn btn-primary' %>
<% end %>

