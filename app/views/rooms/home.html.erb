<div class="banner_search" style="background-image: linear-gradient(-225deg, rgba(150,168,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path('search1.png') %>');">
  <div class="banner_search_title">
    <h2 align="left">Encontre o espaço de trabalho ideal para você.</h2>
  </div>
</div>

<div class="text-center" id="search-form">
  <%= form_tag rooms_path, method: :get do %>
    <%= text_field_tag "address", nil, placeholder: "Endereço" %>
    <%= select_tag(:type, options_for_select(['Psicologia', 'Odontologia', 'Nutrição', 'Psiquiatria'])) %>
    <%= text_field_tag "when", nil, placeholder: "dd/mm/yyyy" %>

    <%= button_tag :submit do %>
      Buscar
    <% end %>
  <% end %>
</div>
