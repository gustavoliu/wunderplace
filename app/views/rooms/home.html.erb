<div class="banner_search" style="background-image: linear-gradient(-225deg, rgba(150,168,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path('search1.png') %>');">
  <div class="banner_search_title">
    <h2 align="left">Encontre o espaço de trabalho ideal para você.</h2>
  </div>
  <div class="search-form">
      <%= form_tag rooms_path, method: :get, class: "form-inline" do %>
      <%= text_field_tag "address", nil, placeholder: "Endereço", class: "form-control" %>
      <%= text_field_tag "when", nil, placeholder: "dd/mm/yyyy", class: "form-control" %>
      <%= select_tag(:type, options_for_select(['Psicologia', 'Odontologia', 'Nutrição', 'Psiquiatria']), class: "form-control") %>
      <%= button_tag :submit, class: "btn btn-success" do %>
        Buscar
      <% end %>
    <% end %>
  </div>
</div>
