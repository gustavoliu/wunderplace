<div class="container">
  <div class="col-xs-6">
    <div class="box_room">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>

    <!-- Wrapper for slides need to add second and third photos -->
      <div class="carousel-inner">
      <div class="item active">
        <%= cl_image_tag(@room.photos.first.path) %>
      </div>

      <div class="item">
        <%= cl_image_tag(@room.photos.first.path) %>
      </div>

      <div class="item">
        <%= cl_image_tag(@room.photos.first.path) %>
      </div>
    </div>


      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <h2><%= @room.name %></h2>

    <div id="room-description">
      <h4><%= @room.description %></h4>
      <p> Endereço: <%= @room.address %></p>
      <p>R$ <%= @room.price %></p>
    </div>

  <div id="features">
    <ul>

        <h4><strong>Comodidades</strong></h4>
      <li>
        <%= render partial: 'block_feature', locals: {feature: 'Secretária', boolean: @room.secretary}  %>
      </li>
      <li>
        <%= render partial: 'block_feature', locals: {feature: 'Divã', boolean: @room.psychology_couch}%>
      </li>
      <li>
        <%= render partial: 'block_feature', locals: {feature: 'Limpeza', boolean: @room.cleaning} %>
      </li>
      <li>
        <%= render partial: 'block_feature', locals: {feature: 'Área fumantes', boolean: @room.smoking_allowed} %>
      </li>
    </ul>
  </div>
  <div class="col-xs-6">
    <div id="map"></div>

  </div>



        <p><%= link_to 'Editar', edit_room_url, class: 'btn btn-primary'%></p>
      </div>
    </div>
  </div>
</div>


